              "name" : "isUpdate",
              "type" : "boolean",
              "doc" : "flag indicating whether this is an update of an existing PIR"
            }, {
              "name" : "name",
              "type" : [ "null", "string" ],
              "doc" : "optional name",
              "default" : null
            } ]
